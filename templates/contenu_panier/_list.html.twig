{% for produit in contenuPaniers %}
    <div class="item-container">
        <div class="left-produit">
            <img src="{{asset('uploads/'~produit.image)}}" alt="{{produit.image}}"/>
        </div>
        <div class="right-produit">
            <div class="top">
                <div>
                    <h3>{{produit.nom}}</h3>
                    <p>Prix: {{ produit.prix }}â‚¬</p>
                    <p>quantite: {{produit.quantite}}</p>
                </div>
                <button class="button-supprimer">
                    <a href="{{ path('app_panier_delete_contenu', {'id': produit.id }) }}">
                        Supprimer
                    </a>
                </button>
                
            </div>
        </div>
    </div>
{% else %}
    <h1>il n'y a pas de produit</h1>
{% endfor %}