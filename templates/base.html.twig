<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <link href='{{ asset('css/styles.css') }}' rel="stylesheet">  
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            <div class="center_header">
                <a href="{{path('app_categorie_index')}}">Drippers</a>
            </div>
            <div class="right_header">
                {% if app.user %}
                    <button><a href="{{path('app_account', {'id': 'compte'})}}">{{ 'nav.compte'|trans }}</a></button>
                {% else %}
                    <button><a href="{{path('app_login')}}">{{ 'nav.connec'|trans }}</a></button>
                    <button><a href="{{path('app_register')}}">{{ 'nav.inscription'|trans }}</a></button>
                {% endif %}
                <button><a href="{{path('app_panier_index')}}">{{ 'nav.panier'|trans }}</a></button>
            </div>
        </header>
        {% for type, messages in app.flashes %}
            {% for msg in messages %}
                <p class="alert alert-{{type}}">{{msg}}</p>
            {% endfor %}
        {% endfor %}
        {% block body %}{% endblock %}
    </body>
</html>
