{% extends 'base.html.twig' %}

{% block title %}Hello AccountController!{% endblock %}

{% block body %}

<div class="example-wrapper">
    <div>
        <button><a href="{{ path('app_account', {'id': 'compte'}) }}">{{ 'account.btn_compte'|trans }}Compte</a></button>
        <button><a href="{{ path('app_account', {'id': 'commande'}) }}">{{ 'account.btn_commande'|trans }}Commandes</a></button>
    </div>
    {% if id == 'compte' %}
        {% include "account/_user_account.html.twig" %}
    {% elseif id == 'commande' %}
        {% include "account/_commande.html.twig" %}
    {% endif %}

</div>
{% endblock %}
